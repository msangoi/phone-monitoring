<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PhoneMonitoring" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/uniqueIdLabel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Identifier" />

        <TextView
            android:id="@+id/uniqueIdText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ToggleButton
        android:id="@+id/startStopButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:onClick="startStopService"
        android:text="ToggleButton" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startStopButton"
        android:layout_marginTop="30dp"
        android:background="@color/background"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/startedSinceLabel"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Started since" />

            <TextView
                android:id="@+id/startedSinceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout2"
            android:layout_marginTop="30dp"
            android:background="@color/background"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lastRefreshLabel"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Last refresh" />

            <TextView
                android:id="@+id/lastRefreshText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/rssiLabel"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="RSSI" />

            <TextView
                android:id="@+id/rssiText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>